<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= simple_format(@product.description) %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @product.image_url %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
<% if @product.image_url.present? %>
<h3>Attached File</h3>
<div class="asset">
<p>
<%= link_to File.basename(@product.image_url.path),
@product.image_url.url %> 
</p>
<p><small><%= number_to_human_size(@product.image_url.size) %>
</small></p>
</div>
<% end %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
